  </div>

  <div class='field'>
    <%= f.label :check_in %>
    <%= f.time_field :check_in %>
  </div>

  <div class='field'>
    <%= f.label :check_out %>
    <%= f.time_field :check_out %>
  </div>

  <div class='field'>
    <%= f.label :number_of_guest %>
    <%= f.number_field :number_of_guest %>
  </div>

  <div class='field'>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class='field'>
    <%= f.label :rules %>
    <%= f.text_field :rules %>
  </div>

  <div class='field'>
    <%= f.label :price_per_night %>
    <%= f.number_field :price_per_night %>
  </div>

  <div class='field'>
    <%= f.label :availability_requirement %>
    <%= f.text_field :availability_requirement %>
  </div>


  <div class='field'>
    <%= f.label :previews %>
    <%= f.file_field :previews, multiple: true %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>